<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Create a new campground</a>
</div>
<ul>
    <% for (let camp of campgrounds) { %>
        <li>
            <a href="/campgrounds/<%= camp._id %>">
                <%= camp.title %>
            </a>
            (<%= camp.location %>)
        </li>
        <% } %>
</ul>