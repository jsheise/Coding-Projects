<% layout('layouts/boilerplate') %>

<h1>Log In To YelpCamp</h1>

<form class="needs-validation" novalidate action="/login" method="POST">
    <div class="mb-3">
        <label class="form-label" for="uNameInput">Username: </label>
        <input class="form-control" type="text" id="uNameInput" name="username" required>
        <div class="invalid-feedback">
            Please provide a valid username.
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="uPassInput">Password: </label>
        <input class="form-control" type="password" id="uPassInput" name="password" required>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>
    <button class="btn btn-success">Login</button>
</form>